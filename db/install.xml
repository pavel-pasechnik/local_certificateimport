<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/certificateimport/db" VERSION="2025111600" COMMENT="XMLDB file for local_certificateimport">
    <TABLES>
        <TABLE NAME="local_certimp_batches" COMMENT="Queued certificate import batches">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="templateid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="createdby" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="status" TYPE="char" LENGTH="20" NOTNULL="true" DEFAULT="pending" SEQUENCE="false"/>
                <FIELD NAME="totalitems" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="processeditems" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="timeupdated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="timeregistered" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
                <KEY NAME="templateid_fk" TYPE="foreign" FIELDS="templateid" REFTABLE="tool_certificate_templates" REFFIELDS="id"/>
            </KEYS>
            <INDEXES>
                <INDEX NAME="template_idx" UNIQUE="false" FIELDS="templateid"/>
                <INDEX NAME="status_idx" UNIQUE="false" FIELDS="status"/>
            </INDEXES>
        </TABLE>

        <TABLE NAME="local_certimp_items" COMMENT="Certificate import items staged for registration">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="batchid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="filename" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="csvline" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="backgroundfileid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
                <FIELD NAME="issueid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
                <FIELD NAME="status" TYPE="char" LENGTH="20" NOTNULL="true" DEFAULT="queued" SEQUENCE="false"/>
                <FIELD NAME="issuetime" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="timeprocessed" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
                <KEY NAME="batch_fk" TYPE="foreign" FIELDS="batchid" REFTABLE="local_certimp_batches" REFFIELDS="id"/>
            </KEYS>
            <INDEXES>
                <INDEX NAME="batch_idx" UNIQUE="false" FIELDS="batchid"/>
                <INDEX NAME="user_idx" UNIQUE="false" FIELDS="userid"/>
                <INDEX NAME="status_idx" UNIQUE="false" FIELDS="status"/>
            </INDEXES>
        </TABLE>
    </TABLES>
</XMLDB>
